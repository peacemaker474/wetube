extends base

block content 
    h4 Update video
    form(method="POST")
        input(
            name="title", 
            placeholder="Video Title", 
            value=video.title, 
            required
        )
        input(
            type="text",
            name="description", 
            placeholder="Description", 
            value=video.description, 
            required, 
        )
        input(
            type="text",
            name="hashtags", 
            placeholder="Hashtags, separated by comma.", 
            value=video.hashtags.join(), 
            required, 
        )
        input(
            type="submit", 
            value="Save"
        )