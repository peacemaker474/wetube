extends base

block content
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(type="text" name="name", placeholder="Name", value=loggedInUser.name, required)
        input(type="email" name="email", placeholder="E-mail", value=loggedInUser.email, required)
        input(type="text" name="username", placeholder="Username", value=loggedInUser.username, required)
        input(type="text" name="location", placeholder="Location", value=loggedInUser.location, required)
        input(type="submit", value="Update Profile")