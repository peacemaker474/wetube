extends ../base

block content
    if errorMessage 
        span=errorMessage
    img(src="/" + loggedInUser.avatarUrl, width="100", height="100")
    form(method="POST" enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", name="avatar", id="avatar", accept="image/*")
        input(type="text" name="name", placeholder="Name", value=loggedInUser.name, required)
        input(type="email" name="email", placeholder="E-mail", value=loggedInUser.email, required)
        input(type="text" name="username", placeholder="Username", value=loggedInUser.username, required)
        input(type="text" name="location", placeholder="Location", value=loggedInUser.location, required)
        input(type="submit", value="Update Profile")
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password &rarr;