extends base

block content
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", name="video", id="video", accept="video/*", required)
        input(
            type="text"
            name="title",
            placeholder="Title", 
            required
        )
        input(
            type="text"
            name="description",
            placeholder="Description", 
            required
        )
        input(
            type="text"
            name="hashtags",
            placeholder="Hashtags, separated by comma.", 
            required
        )
        input(
            type="submit",
            value="Upload Video"
        )